{
  "compilerOptions": {
    "lib": ["es5", "es6", "es7", "es2017.object", "dom"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types",
      "./types/*"
    ]
  },
  "include": ["src/**/*", "test/**/*"]
}
